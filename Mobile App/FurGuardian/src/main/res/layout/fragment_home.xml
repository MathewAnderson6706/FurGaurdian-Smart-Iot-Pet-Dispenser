<?xml version="1.0" encoding="utf-8"?>
<!-- Updated Home Fragment Layout with smaller WebView and space for additional buttons -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:padding="24dp">

    <!-- Add a horizontal guideline at 70% to limit WebView height -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <!-- WebView to display the live video feed - now with height constraint to guideline -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Fallback Image when the stream is not active -->
    <ImageView
        android:id="@+id/fallbackImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/fallback_photo"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:visibility="gone"/>

    <!-- First New Button -->
    <Button
        android:id="@+id/dispense"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Dispense"
        android:textSize="12sp"
        android:background="@drawable/rounded_button_background"
        android:textColor="@android:color/white"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"/>

    <!-- Second New Button -->
    <Button
        android:id="@+id/treat"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Treat Dispense"
        android:textSize="12sp"
        android:background="@drawable/rounded_button_background"
        android:textColor="@android:color/white"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/dispense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"/>

    <!-- Refresh Button - now positioned below the second new button -->
    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Refresh Stream"
        android:textSize="12sp"
        android:background="@drawable/rounded_button_background"
        android:textColor="@android:color/white"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/treat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="1px"/>

</androidx.constraintlayout.widget.ConstraintLayout>